



@model InvoiceManagementNew.Models.LoginModel
@{
    ViewBag.Title = "LoginPage";
    Layout = null   ;
}

<head>
    <title>InvoiceManagement Test</title>


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    @*<link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />*@
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/animate.css">
    <!--===============================================================================================-->
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <link href="~/Content/css/util.css" rel="stylesheet" />

    <style>
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="min-height:100vh!important">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("UserLogin", "Home", FormMethod.Post))
                {
                    <form class="login100-form validate-form">
                        <span class="login100-form-title">
                            Member Login
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                            @*@Html.TextBoxFor(m => Model.UserPrincipalName, new { @id = "LoginName", @class = "form-control", @style = "float:left;margin-right:10px;margin-top:-5px;" })*@
                            @*<input class="input100" type="text" name="username" placeholder="Username" id="username">*@

                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username", @class = "input100" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })

                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            @*<input class="input100" type="password" name="pass" placeholder="Password" id="password">*@

                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "input100", })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })

                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn">
                            <input class="login100-form-btn" type="submit" value=" Login">
                        </div>

                        <div class="text-center p-t-12">
                            <span class="txt1">
                                Forgot
                            </span>
                            <a class="txt2" href="#" id="forgetpasspowrdPopup">
                                Username / Password?
                            </a>
                        </div>

                        <div class="text-center p-t-136">
                            <a class="txt2" href="#">
                                Create your Account
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</body>



<!--===============================================================================================-->
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<!--===============================================================================================-->
<script src="https://getbootstrap.com/docs/4.0/assets/js/vendor/popper.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tilt.js/1.2.1/tilt.jquery.min.js"></script>
<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>

<!--===============================================================================================-->
@*
    <script src="js/main.js"></script>*@
<script src="~/Scripts/js/main.js"></script>

<script>

    function UserLogin() {


        var loginObj = {
            UserName: $('#username').val(),
            Password: $('#password').val()
        };



        $.ajax({
            url: '@Url.Action("UserLogin", "Home")',
            data: JSON.stringify(loginObj),
            type: "POST",
            cache: false,
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
            }, error: function (errormessParentMenuId) {
                alert(errormessParentMenuId.responseText);
            }
        });
    }

    $('#forgetpasspowrdPopup').click(function () {

        alert("Contact to admin to reset the password.");
    });

</script>
